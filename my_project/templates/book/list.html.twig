{% extends 'base.html.twig' %}

{% block title %}Список книг{% endblock %}

{% block modals %}
    <div id="modalBackgroud" onclick="hideModal()"></div>
    <template id="bookModalTemplate">
        <div class="modal-wrapper">
            <div class="my-modal">
                <div class="modal-title">
                    {title}
                </div>
                <div class="modal-content">
                    {content}
                </div>
                <div class="modal-actions">
                    {buttons}
                </div>
            </div>
        </div>
    </template>
{% endblock %}

{% block body %}
    <div class="row">
        <input id="live-search" type="text" placeholder="Введите запрос" onchange="liveSearch()">
        <div class="searchResult"></div>
    </div>

    <div class="row">
        {% for book in books %}
            <div class="col-sm-6">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">{{ book.title }}</h5>
                        <h6 class="card-subtitle mb-2 text-muted">{{ book.price }}</h6>
                        {#<p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>#}
                        <a href="#" onclick="showBook({{ book.id }})" class="card-link">Посмотреть полностью товар</a>
                        <div onclick="addToFavourite({{ book.id }})" class="btn btn-primary">Добавить в избранное</div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
    <div class="row">
        <a href="?page=1">1</a>
        <a href="?page=2">2</a>
    </div>
{% endblock %}
